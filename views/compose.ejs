
<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="input-text" action="/compose" method="post">


  <div class="form-group">
    <label for="newTitle">Title</label>
    <input type="text" class="form-control" id="newTitle" name="newTitle">
  </div>

  <div class="form-group">
   <label for="newPost">New Post</label>
   <textarea class="form-control" id="newPost" rows="10" name="newPost"></textarea>
 </div>


  <button class="btn btn-primary" type="submit" name="button">Publish</button>

</form>

